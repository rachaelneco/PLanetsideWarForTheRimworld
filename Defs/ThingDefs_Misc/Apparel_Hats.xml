<Defs>
 
  <!-- ====================================== VS max helmet =========================================== -->
 
	<ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_VSmaxhelmet</defName>
    <label>VS max helmet</label>
    <description>The Vanu Sovereignty pinnacle of infantry armor. Capable of withstanding massive amounts of damage. The cost for such wonder is as steep as the price for technological freedom..</description>
    <techLevel>Spacer</techLevel>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>AuraxisHeavyArmor</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Pawn/Humanlike/Apparel/VSmaxhelmet/VSmaxhelmet</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>40000</WorkToMake>
      <MaxHitPoints>160</MaxHitPoints>
      <Mass>2.7</Mass>
      <ArmorRating_Blunt>.80</ArmorRating_Blunt>
      <ArmorRating_Sharp>.99</ArmorRating_Sharp>
      <ArmorRating_Heat>0.70</ArmorRating_Heat>
      <ArmorRating_Electric>99</ArmorRating_Electric>
      <Insulation_Cold>-30</Insulation_Cold>
      <Insulation_Heat>3</Insulation_Heat>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Component>2</Component>
      <Cortium>100</Cortium>
    </costList>
		<generateCommonality>2</generateCommonality>
		<apparel>
			<bodyPartGroups>
				<li>FullHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/VSmaxhelmet/VSmaxhelmet</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags>
		<li>VanuSovereignty</li>
      </tags>
      <defaultOutfitTags>
		<li>VSmax</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>
  
  
